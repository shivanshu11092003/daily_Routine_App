<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/WhiteSmoke"
    android:orientation="vertical"

    tools:context=".dailytrack">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="105dp"
        android:orientation="horizontal">


        <androidx.cardview.widget.CardView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:backgroundTint="@color/WhiteSmoke"
            app:cardCornerRadius="100dp">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/trevor" />


        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:layout_width="248dp"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="43dp"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"

                android:layout_marginRight="20dp"
                android:fontFamily="casual"
                android:text=" Hello Trevor"
                android:textColor="@color/black"

                android:textSize="30dp"

                />

            <TextView
                android:layout_width="132dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="2dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="30dp"
                android:fontFamily="@font/abeezee"
                android:text="Good Morning"
                android:textColor="@color/black"

                android:textSize="19dp"

                />


        </LinearLayout>

        <ImageView
                android:layout_width="40dp"
                android:layout_height="match_parent"
                android:src="@drawable/baseline_alarm_24" />



    </LinearLayout>

    <LinearLayout
        android:padding="2dp"
        android:layout_width="420dp"
        android:layout_height="187dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="410dp"
            android:layout_height="174dp"
            android:layout_marginTop="7dp"
            android:background="@drawable/card2"
            android:backgroundTint="@color/Honeydew"

            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="28dp"

                    android:layout_marginTop="20dp"
                    android:fontFamily="@font/abeezee"
                    android:text="YOU ARE ALMOST DONE !"
                    android:textColor="@color/black"
                    android:textSize="18dp"

                    />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="15dp">

                    <TextView
                        android:layout_width="100dp"
                        android:fontFamily="@font/abeezee"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="10dp"
                        android:gravity="center"
                        android:text="2/3 \n Habits"
                        android:textColor="@color/black"
                        android:textSize="25dp">

                    </TextView>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:fontFamily="@font/abeezee"
                        android:layout_marginTop="10dp"
                        android:gravity="center"
                        android:text="2/5 \n Tasks"
                        android:textColor="@color/black"
                        android:textSize="25dp"></TextView>
                </LinearLayout>
            </LinearLayout>

            <RelativeLayout
                android:id="@+id/progress_layout"
                android:layout_width="170dp"
                android:layout_height="170dp"

                >


                <ProgressBar
                    android:id="@+id/progress_bar"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/circular_shape"
                    android:indeterminate="false"
                    android:progressDrawable="@drawable/circular_progress_bar"
                    android:textAlignment="center" />

                <TextView
                    android:id="@+id/progress_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentRight="true"

                    android:layout_centerVertical="true"
                    android:gravity="center"
                    android:text="---"
                    android:textColor="@color/black"
                    android:textSize="28sp"
                    android:textStyle="bold"
                    tools:ignore="HardcodedText,RtlHardcoded" />
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="410dp"
        android:layout_height="103dp"
        android:layout_marginTop="7dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="55dp"
            android:layout_height="85dp"
            android:background="@drawable/card2"
            android:gravity="center"
            android:fontFamily="@font/abeezee"
            android:layout_marginLeft="9dp"
            android:outlineAmbientShadowColor="@color/WhiteSmoke"
            android:shadowColor="@color/WhiteSmoke"
            android:outlineSpotShadowColor="@color/WhiteSmoke"
            android:searchResultHighlightColor="@color/WhiteSmoke"
            android:text="15 \n Wed"
            android:textColorLink="@color/WhiteSmoke"
            android:textColor="@color/black"
            android:textSize="20dp" />

        <TextView
            android:layout_width="55dp"
            android:layout_height="85dp"
            android:layout_marginLeft="8dp"
            android:background="@drawable/card2"
            android:gravity="center"
            android:text="16 \n Thu"
            android:fontFamily="@font/abeezee"
            android:textColor="@color/black"
            android:textSize="20dp" />

        <TextView
            android:layout_width="55dp"
            android:layout_height="85dp"
            android:layout_marginLeft="8dp"
            android:background="@drawable/card2"
            android:gravity="center"
            android:text="17 \n Fri"
            android:fontFamily="@font/abeezee"
            android:textColor="@color/black"
            android:textSize="20dp" />

        <TextView
            android:layout_width="55dp"
            android:layout_height="85dp"
            android:layout_marginLeft="8dp"
            android:background="@drawable/card2"
            android:gravity="center"
            android:text="18 \n Sat"
            android:fontFamily="@font/abeezee"
            android:textColor="@color/black"
            android:textSize="20dp" />

        <TextView
            android:layout_width="55dp"
            android:layout_height="85dp"
            android:fontFamily="@font/abeezee"
            android:layout_marginLeft="8dp"
            android:background="@drawable/card2"
            android:gravity="center"
            android:text="19 \n Sun"
            android:textColor="@color/black"
            android:textSize="20dp" />

        <TextView
            android:layout_width="55dp"
            android:layout_height="85dp"
            android:layout_marginLeft="8dp"
            android:background="@drawable/card2"
            android:gravity="center"
            android:fontFamily="@font/abeezee"
            android:text="20 \n Mon"
            android:textColor="@color/black"
            android:textSize="20dp" />




    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="49dp"
        android:layout_marginTop="5dp"
        android:orientation="horizontal"

        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Wednesday habit"
            android:fontFamily="@font/abeezee"
            android:textColor="@color/black"
            android:textSize="20dp">

        </TextView>

        <TextView
            android:layout_width="120dp"
            android:fontFamily="@font/abeezee"
            android:layout_height="match_parent"
            android:layout_marginLeft="180dp"
            android:text="See all"
            android:textColor="@color/black"
            android:textSize="18dp">

        </TextView>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="316dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="91dp"
                android:layout_marginLeft="10dp"
                android:background="#D772CF68"
                android:backgroundTint="#D772CF68"
                app:cardCornerRadius="20dp">

                <ImageView
                    android:layout_width="48dp"

                    android:layout_height="68dp"
                    android:layout_marginTop="8dp"
                    android:background="#D772CF68"
                    android:backgroundTint="#D772CF68"
                    android:src="@drawable/baseline_directions_run_24" />

                <TextView
                    android:layout_width="86dp"
                    android:layout_height="51dp"
                    android:layout_marginLeft="47dp"
                    android:layout_marginTop="24dp"
                    android:text="Running"
                    android:fontFamily="@font/abeezee"
                    android:textColor="@color/black"
                    android:textSize="20dp" />

                <ProgressBar
                    android:id="@+id/progress_bar2"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:layout_width="60dp"
                    android:layout_height="67dp"
                    android:layout_marginLeft="133dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/circular_shape"
                    android:indeterminate="false"
                    android:progressDrawable="@drawable/circular_progress_bar"
                    android:textAlignment="center" />
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="203dp"
                android:layout_height="191dp"
                android:layout_marginTop="10dp"
                android:background="@color/WhiteSmoke"
                android:layout_marginLeft="10dp"
                android:backgroundTint="@color/Bisque"
                app:cardCornerRadius="20dp">

                <ImageView
                    android:layout_width="match_parent"

                    android:layout_height="110dp"
                    android:layout_marginTop="8dp"
                    android:src="@drawable/images__6__removebg_preview" />

                <TextView
                    android:layout_width="112dp"
                    android:layout_height="55dp"
                    android:layout_marginLeft="34dp"
                    android:fontFamily="@font/abeezee"
                    android:layout_marginTop="140dp"
                    android:text="Yoga \n 06.00 to 07.00"
                    android:textColor="@color/black"
                    android:textSize="15dp" />
            </androidx.cardview.widget.CardView>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView
                android:layout_width="160dp"
                android:layout_height="212dp"
                android:layout_marginLeft="18dp"
                android:background="@color/WhiteSmoke"
                android:backgroundTint="@color/HotPink"
                app:cardCornerRadius="20dp">

                <ImageView
                    android:layout_width="match_parent"

                    android:layout_height="212dp"
                    android:layout_marginTop="8dp"
                    android:paddingTop="100dp"
                    android:src="@drawable/baseline_pedal_bike_24" />

                <TextView
                    android:layout_width="121dp"
                    android:layout_height="66dp"
                    android:layout_marginLeft="26dp"
                    android:layout_marginTop="15dp"
                    android:fontFamily="@font/abeezee"
                    android:text="Bicycle \n 07.00 for 07 km"
                    android:textColor="@color/black"
                    android:textSize="15dp" />


            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="160dp"
                android:layout_height="78dp"
                android:layout_marginLeft="18dp"
                android:layout_marginTop="10dp"
                android:background="@color/WhiteSmoke"
                android:backgroundTint="@color/LightBlue"
                app:cardCornerRadius="20dp">

                <ImageView
                    android:layout_width="55dp"

                    android:layout_height="52dp"
                    android:layout_marginTop="8dp"
                    android:src="@drawable/swim" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="55dp"
                    android:layout_marginLeft="48dp"
                    android:layout_marginTop="18dp"
                    android:text="Swimming"
                    android:fontFamily="@font/abeezee"
                    android:textColor="@color/black"
                    android:textSize="20dp" />
            </androidx.cardview.widget.CardView>
        </LinearLayout>


    </LinearLayout>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:backgroundTint="#1e5298">

        <FrameLayout
            android:id="@+id/frame_layout"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintBottom_toTopOf="@+id/bottomNavigationView"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:background="#1e5298"
            android:backgroundTint="#1e5298">

        </FrameLayout>

        <com.google.android.material.bottomnavigation.BottomNavigationView
            android:id="@+id/bottomNavigationView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="#147D3A"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:menu="@menu/menu_navigation" />

    </androidx.constraintlayout.widget.ConstraintLayout>






</LinearLayout>